<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="hibernate.objects.Coordinates" table="coords">
        <meta attribute="class-description">
            This class contains the hunt data.
        </meta>
        <id name="id" type="int" column="id">
            <generator class="native"/>
        </id>
        <property name="latitude" column="latitude" type="string"/>
        <property name="longitude" column="longitude" type="string"/>
        <property name="image" column="image" type="string"/>
        <property name="name" column="name" type="string"/>
    </class>
</hibernate-mapping>
