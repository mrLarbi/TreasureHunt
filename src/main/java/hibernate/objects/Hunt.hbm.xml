<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="hibernate.objects.Hunt" table="hunts">
        <meta attribute="class-description">
            This class contains the hunt data.
        </meta>
        <id name="id" type="int" column="id">
            <generator class="native"/>
        </id>
        <property name="creator" column="creator" type="int"/>
        <property name="name" column="name" type="string"/>
        <property name="points" column="points" type="int[]"/>
        <property name="usersfinished" column="usersfinished" type="int[]"/>
        <property name="userscurrent" column="userscurrent" type="int[]"/>
    </class>
</hibernate-mapping>
