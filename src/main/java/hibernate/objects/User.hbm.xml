<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
   <class name="hibernate.objects.User" table="users">
      <meta attribute="class-description">
         This class contains the user data. 
      </meta>
      <id name="id" type="int" column="id">
         <generator class="native"/>
      </id>
      <property name="username" column="username" type="string"/>
      <property name="password" column="password" type="string"/>
      <property name="email" column="email" type="string"/>
      <property name="avatar" column="avatar" type="string"/>
      <property name="name" column="name" type="string"/>
      <property name="gender" column="gender" type="character"/>
      <property name="postalcode" column="postalcode" type="int"/>
      <property name="phone" column="phone" type="string"/>
   </class>
</hibernate-mapping>
