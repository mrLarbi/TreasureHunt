<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
    <display-name>Super Treasure Hunt Bros</display-name>

    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>servlets.Login</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>available</servlet-name>
        <servlet-class>servlets.NameAvailable</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>mobilelogin</servlet-name>
        <servlet-class>servlets.mobile.Login</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>register</servlet-name>
        <servlet-class>servlets.Register</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>home</servlet-name>
        <servlet-class>servlets.Home</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>createhunt</servlet-name>
        <servlet-class>servlets.CreateHunt</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>createhuntmobile</servlet-name>
        <servlet-class>servlets.mobile.CreateHunt</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>checkpoint</servlet-name>
        <servlet-class>servlets.CheckPoint</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>checkpointmobile</servlet-name>
        <servlet-class>servlets.mobile.CheckPoint</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>starthunt</servlet-name>
        <servlet-class>servlets.StartHunt</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>register</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>mobilelogin</servlet-name>
        <url-pattern>/mobile/login</url-pattern>
    </servlet-mapping>


    <servlet-mapping>
        <servlet-name>home</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>createhunt</servlet-name>
        <url-pattern>/user/createhunt</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>checkpoint</servlet-name>
        <url-pattern>/user/checkpoint</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>available</servlet-name>
        <url-pattern>/available</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>checkpointmobile</servlet-name>
        <url-pattern>/mobile/checkpoint</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>createhuntmobile</servlet-name>
        <url-pattern>/mobile/createhunt</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>starthunt</servlet-name>
        <url-pattern>/user/starthunt</url-pattern>
    </servlet-mapping>


    <filter>
        <filter-name>CsrfFilter</filter-name>
        <filter-class>org.apache.catalina.filters.CsrfPreventionFilter</filter-class>
        <init-param>
            <param-name>denyStatus</param-name>
            <param-value>403</param-value>
        </init-param>
    </filter>

    <filter>
        <filter-name>LoggingFilter</filter-name>
        <filter-class>filters.LoggingFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>CsrfFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter-mapping>
        <filter-name>LoggingFilter</filter-name>
        <url-pattern>/user/*</url-pattern>
    </filter-mapping>
    
    <welcome-file-list>
        <welcome-file>home</welcome-file>
    </welcome-file-list>

    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>


</web-app>
